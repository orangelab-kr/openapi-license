{
  "name": "serverless-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/danieluhm2004/serverless-template.git",
  "author": "danieluhm2004 <iam@dan.al>",
  "license": "MIT",
  "scripts": {
    "serve": "yarn serve:dev",
    "serve:dev": "cross-env NODE_ENV=dev npx serverless offline",
    "serve:prod": "cross-env NODE_ENV=prod npx serverless offline",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy": "yarn deploy:prod",
    "deploy:prod": "npx serverless deploy --stage prod",
    "deploy:stage": "npx serverless deploy --stage stage",
    "deploy:dev": "npx serverless deploy --stage dev"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3",
    "serverless-http": "^2.7.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.5",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.9",
    "@types/prettier": "^2.1.5",
    "@types/serverless": "^1.78.20",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "serverless": "^2.21.1",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-node-externals": "^2.5.2"
  }
}
